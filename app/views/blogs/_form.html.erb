<%= form_for @blog, :html => { multipart: true} do |f| %>


  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title%>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body%>

  </div>

  <div class="actions">
      <%= f.submit %>
  </div>

<% end %>
