<%= form_for @blog, :html => { multipart: true} do |f| %>

  <% if @blog.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%=f.error_span(:image) %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control' %>
    <%=f.error_span(:title) %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body, :class => 'form-control' %>
    <%=f.error_span(:body) %>
  </div>

  <div class="actions">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                blogs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
