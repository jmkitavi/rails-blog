<%= form_for @blog, :html => { multipart: true} do |f| %>

  <% if @blog.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%=f.error_span(:image) %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title%>
    <%=f.error_span(:title) %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body%>
    <%=f.error_span(:body) %>
  </div>

  <div class="actions">
      <%= f.submit %>
  </div>

<% end %>
