
<div class="container">
    <% @blogs.each do |blog| %>
    <article>
    <h2><a href="singlepost.html"><%= blog.title %></a></h2>
 
    <div class="row">
        <div class="group1 col-sm-6 col-md-6">
            <span class="glyphicon glyphicon-folder-open"></span> <a href="#">Signs</a>
            <span class="glyphicon glyphicon-bookmark"></span> <a href="#">Aries</a>
        </div>
        <div class="group2 col-sm-6 col-md-6">
                <i class="pull-right"><span class="glyphicon glyphicon-time"></span><%=l blog.created_at %></i>
                <b class="pull-right"><span class="glyphicon glyphicon-pencil"></span> <a href="#">20 Comments</a></b>
        </div>
    </div>
 
    <hr>
    <div style="width:800px;margin:0 auto;">
       <%=blog.image %>
      <img src="https://upload.wikimedia.org/wikipedia/commons/4/4d/Ronaldo-14-05-2013.jpg" class="img-responsive">
    </div>
 
    <br />
     <div class="col-md-10 col-sm-10 col-sm-offset-1 col-md-offset-1 text-justify">
      <%= blog.body %>
    </div>
    <hr>
</article>
